<div class="container">
  <h1>Database Overview</h1>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Item</th>
        <th scope="col">Count</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Users</td>
        <td id="user-count"><%= user_count %></td>
      </tr>
      <tr>
        <td>Questions</td>
        <td id="question-count"><%= question_count %></td>
      </tr>
      <tr>
        <td>Answers</td>
        <td id="answer-count"><%= answer_count %></td>
      </tr>
    </tbody>
  </table>

  <h1>Tenant Overview</h1>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <th scope="col">Tenant</th>
      <th scope="col">API Request Count</th>
    </thead>
    <tbody>
      <% tenants.each do |tenant| %>
      <tr>
        <td class="tenant-name"><%= tenant.name %></td>
        <td class="tenant-request-count" data-tenant-id="<%= tenant.id %>"><%= tenant.api_request_count.to_i %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>